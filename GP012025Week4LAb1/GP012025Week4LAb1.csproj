<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<UseMonoGameDesktopGL>true</UseMonoGameDesktopGL>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1101" />
		<PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.2.1101" />
		<PackageReference Include="Tracker" Version="1.0.7-beta" />
	</ItemGroup>

	<Target Name="RestoreDotnetTools" BeforeTargets="CollectPackageReferences">
		<Message Text="Restoring dotnet tools (this might take a while depending on your internet speed and setup)..." />
		<Exec Command="dotnet tool restore" />
	</Target>
</Project>
